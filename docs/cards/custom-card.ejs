<% /* cards/custom-card.ejs */ %>

<div class="team-grid grid gap-8 md:grid-cols-3">
  <% for (let item of items) { %>
    <div class="team-card rounded-lg shadow bg-white overflow-hidden">
      <!-- headshot -->
      <a href="<%- item.path %>">
        <img
          src="<%- item.headshot %>"
          alt="Headshot of <%= item.title %>"
          class="w-full h-56 object-cover"
        />
      </a>
      <div class="p-4">
        <!-- name -->
        <h3 class="text-xl font-semibold mb-1">
          <a href="<%- item.path %>"><%= item.title %></a>
        </h3>
        <!-- pronouns -->
        <% if (item.pronouns) { %>
          <p class="italic text-sm mb-1"><%= item.pronouns %></p>
        <% } %>
        <!-- credentials + position + affiliation -->
        <p class="text-sm mb-2">
          <strong><%= item.credentials %></strong><br/>
          <%= item.position %>, <%= item.affiliation %>
        </p>
        <!-- ORCiD (optional) -->
        <% if (item.orcid) { %>
          <p class="text-xs mb-2">
            ORCiD: <a href="https://orcid.org/<%= item.orcid %>"><%= item.orcid %></a>
          </p>
        <% } %>
        <!-- descriptions -->
        <p class="text-sm mb-2"><%= item["description-research"] %></p>
        <p class="text-sm mb-4"><%= item["description-os"] %></p>
        <!-- lab website button -->
        <% if (item.link) { %>
          <a
            href="<%- item.link %>"
            class="btn btn-outline-primary"
            role="button"
          ><%= item["website-button"] %></a>
        <% } %>
      </div>
    </div>
  <% } %>
</div>
