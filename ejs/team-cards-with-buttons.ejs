<ul class="people-list list">
<%
function resolveImg(item) {
  const img = item.headshot || item.image || item.thumbnail;
  if (!img) return null;
  if (/^https?:\/\//i.test(img)) return img;
  const base = (item.path || "").replace(/[^/]+$/, "");
  const enc = encodeURI(img).replace(/%2F/gi, "/");
  return base + enc;
}
%>

<style>
.people-list {
  display: grid;
  gap: 1.5rem;
  padding-left: 0;
  list-style: none;
  margin-top: 1rem;
  grid-template-columns: repeat(1, minmax(0, 1fr));
}
@media (min-width: 640px){ .people-list { grid-template-columns: repeat(2, minmax(0, 1fr)); } }
@media (min-width: 1024px){ .people-list { grid-template-columns: repeat(3, minmax(0, 1fr)); } }

.people-list .card {
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 1rem;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  transition: all 0.25s ease-in-out;
  text-align: left;
  position: relative;
}
.people-list .card:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 18px rgba(0,0,0,0.08);
}

/* Image */
.people-list .card-img-top {
  position: relative;
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  border-radius: 1rem 1rem 0 0;
}
.people-list .card-img-top img {
  position: absolute;
  inset: 0;
  width: 100%; height: 100%;
  object-fit: cover;
  display: block;
}

/* Text content */
.people-list .card-body {
  padding: 1em;
  transition: all 0.25s ease-in-out;
}
.people-list .card-title {
  font-weight: 600;
  margin-bottom: 0.25em;
  font-size: 1.05em;
  line-height: 1.3;
}
.people-list .credentials {
  font-size: 0.9em;
  color: #555;
  margin-bottom: 0.25em;
}
.people-list .affiliation {
  font-size: 0.9em;
  color: #666;
  line-height: 1.3;
  margin-bottom: 0.5em;
}

/* Expandable hover section */
.people-list .card-extra {
  max-height: 0;
  opacity: 0;
  overflow: hidden;
  transition: all 0.25s ease-in-out;
}
.people-list .card:hover .card-extra {
  max-height: 60px; /* Adjust as needed */
  opacity: 1;
}

/* Reveal contents */
.people-list .card-extra {
  display: flex;
  align-items: center;      /* ✅ vertically align button + icons */
  gap: 0.6em;
}

/* Button styling */
.people-list .card-extra .btn {
  background: #000;
  color: #fff;
  padding: 0.25em 0.8em;     /* ✅ smaller vertical padding */
  border-radius: 1.25rem;
  font-weight: 500;
  font-size: 0.85em;
  text-decoration: none;
  line-height: 1.2;
  display: inline-flex;      /* ✅ helps vertical centering */
  align-items: center;
  height: 1.8em;             /* ✅ aligns with icon height */
}
.people-list .card-extra .btn:hover {
  background: #333;
}

/* Icons */
.people-list .card-extra .social-icons {
  display: flex;
  align-items: center;       /* ✅ vertical alignment */
  gap: 0.5em;
  font-size: 1.1em;
}
.people-list .card-extra .social-icons a {
  color: #444;
  opacity: 0.9;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 1.8em;             /* ✅ matches button height */
}
.people-list .card-extra .social-icons a:hover {
  opacity: 1;
}
.people-list .card-extra .social-icons a:hover {
  opacity: 1;
}
</style>

<% for (const item of items) { 
     const imgSrc = resolveImg(item);
%>
  <li class="card" <%= metadataAttrs(item) %>>
    <% if (imgSrc) { %>
      <div class="card-img-top">
        <img src="<%- imgSrc %>" alt="<%= item.pagetitle || item.title %>">
      </div>
    <% } %>

    <div class="card-body">
      <h5 class="card-title"><%= item.pagetitle || item.title %></h5>
      <% if (item.credentials) { %><div class="credentials"><%= item.credentials %></div><% } %>
      <% if (item.affiliation) { %><div class="affiliation"><%= item.affiliation %></div><% } %>

      <!-- hidden by default; expands on hover -->
      <div class="card-extra">
        <a href="<%- item.path %>" class="btn">View Details</a>
        <div class="social-icons">
          <% if (item.orcid) { %>
            <a href="https://orcid.org/<%- item.orcid %>" title="ORCID" target="_blank" rel="noopener">
              <i class="bi bi-person-badge"></i>
            </a>
          <% } %>
          <% if (item.link) { %>
            <a href="<%- item.link %>" title="Website" target="_blank" rel="noopener">
              <i class="bi bi-globe"></i>
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </li>
<% } %>
</ul>




