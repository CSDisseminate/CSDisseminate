<style>
/* ---- GRID: fixed column counts by breakpoint ---- */
.people-list {
  display: grid;
  gap: 1.5rem;
  padding-left: 0;
  list-style: none;
  margin-top: 1rem;
  grid-template-columns: repeat(1, minmax(0, 1fr));
}

@media (min-width: 640px) {
  .people-list { grid-template-columns: repeat(2, minmax(0, 1fr)); }
}
@media (min-width: 1024px) {
  .people-list { grid-template-columns: repeat(3, minmax(0, 1fr)); }
}

/* ---- Card ---- */
.people-list .card {
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 1rem;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  text-align: left;
}
.people-list .card:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 18px rgba(0,0,0,0.08);
}

/* ---- Square image with rounded top corners ---- */
.people-list .card-img-top {
  position: relative;
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  border-radius: 1rem 1rem 0 0;
}
.people-list .card-img-top img {
  position: absolute; inset: 0;
  width: 100%; height: 100%;
  object-fit: cover; display: block;
}

/* ---- Text panel ---- */
.people-list .card-body {
  padding: 1em;
  background: #f7f7f7;              /* fallback if Vibrant fails */
  transition: background 0.4s ease;  /* smooth color fade-in */
}
.people-list .card-title {
  font-weight: 600;
  margin-bottom: .25em;
  font-size: 1.05em;
  line-height: 1.3;
}
