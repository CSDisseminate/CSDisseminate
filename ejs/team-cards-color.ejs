<script>
document.addEventListener("DOMContentLoaded", function () {
  if (typeof Vibrant === "undefined") return;

  const cards = document.querySelectorAll(".people-list .card");

  cards.forEach(card => {
    const img = card.querySelector(".card-img-top img");
    const body = card.querySelector(".card-body");
    if (!img || !body) return;

    function applyColor() {
      Vibrant.from(img).getPalette()
        .then(palette => {
          const swatch =
            palette.LightVibrant ||
            palette.Vibrant ||
            palette.Muted ||
            palette.LightMuted;

          if (!swatch) return;

          const [r, g, b] = swatch.rgb;

          // --- RGB → HSL conversion ---
          function rgbToHsl(r, g, b) {
            r /= 255; g /= 255; b /= 255;
            const max = Math.max(r, g, b), min = Math.min(r, g, b);
            let h, s, l = (max + min) / 2;

            if (max === min) { h = s = 0; }
            else {
              const d = max - min;
              s = l > 0.5 ? d / (2 - max - min) : d / (max + min);
              switch (max) {
                case r: h = (g - b) / d + (g < b ? 6 : 0); break;
                case g: h = (b - r) / d + 2; break;
                case b: h = (r - g) / d + 4; break;
              }
              h /= 6;
            }
            return [h * 360, s, l];
          }

          // --- convert ---
          let [h, s, l] = rgbToHsl(r, g, b);

          // --- Normalize saturation & lightness ---
          s = 0.23;   // subtle color (0.20–0.35 works great)
          l = 0.90;   // unified brightness (0.87–0.92 sweet spot)

          // --- HSL → CSS color ---
          const color = `hsl(${Math.round(h)}, ${Math.round(s * 100)}%, ${Math.round(l * 100)}%)`;

          // --- Apply gradient background ---
          body.style.background =
            "linear-gradient(180deg, " + color + ", " + color + ")";

          // --- Automatic text contrast ---
          const yiq = ((r*299)+(g*587)+(b*114))/1000;
          const textColor = yiq >= 128 ? "#000" : "#fff";
          body.style.color = textColor;

          const title = card.querySelector(".card-title");
          const cred  = card.querySelector(".credentials");
          const aff   = card.querySelector(".affiliation");
          [title, cred, aff].forEach(el => { if (el) el.style.color = textColor; });
        })
        .catch(err => console.warn("Vibrant error:", err));
    }

    img.complete ? applyColor() : img.addEventListener("load", applyColor, { once: true });
  });
});
</script>




